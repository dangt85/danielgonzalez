<h3>Contact Form</h3>

<%= form_for(@contact, :url => {:action => 'create'}) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :name, :class => "req" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :message, :class => "req" %><br />
    <%= f.text_area :message, :rows => 6, :cols => 50 %>
  </div>
  <div class="field" id="recaptcha">
    <%= recaptcha_tags :display => {:theme => 'blackglass'} %>
  </div>
  <div class="actions">
    <%= f.submit 'Submit' %>
  </div>
<% end %>
