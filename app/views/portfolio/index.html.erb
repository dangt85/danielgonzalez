<% @projects.each do |project| %>
  <h2><%=h project.name %></h2>

  <div class="post-body">
    <p>
      <%= link_to_unless(project.url.nil?,
        image_tag(project.public_filename, :width => '400'), project.url) do
        image_tag(project.public_filename, :width => '400')
      end %>
    </p>
    <%= simple_format(h(project.description)) %>
  </div>

  <p class="postmeta">
    Contact: <%= mail_to(project.contact_email) %> |
    <span class="date"><%= project.created_at.to_s(:short_ordinal) %></span>
  </p>
<% end %>